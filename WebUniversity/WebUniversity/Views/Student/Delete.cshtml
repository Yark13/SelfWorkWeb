@model StudentViewModel
@{
    ViewData["Title"] = "Delete Student";
}

<link rel="stylesheet" href="~/css/delete-confirmation.css" />

<div class="delete-container">
    <h1>Confirm Deletion</h1>

    <form asp-controller="Student" asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Student Information</legend>

            <div class="field">
                <label asp-for="Id"></label>
                <span class="value">@Model.Id</span>
                <input asp-for="Id" type="hidden" />
            </div>

            <div class="field">
                <label asp-for="LastName"></label>
                <span class="value">@Model.LastName</span>
            </div>

            <div class="field">
                <label asp-for="FirstName"></label>
                <span class="value">@Model.FirstName</span>
            </div>

            <div class="field">
                <label asp-for="GroupId"></label>
                <span class="value">@Model.GroupId</span>
            </div>

            <button type="submit" class="btn-confirm">Confirm</button>
        </fieldset>
    </form>
</div>
