@model StudentViewModel
<link rel="stylesheet" href="~/css/entity-form.css" />

<h1>Create New Student</h1>
<form asp-controller="Student" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Student Information</legend>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GroupId"></label>
            <select asp-for="GroupId" asp-items="Model.existingGroups" class="form-control">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.GroupId)
                    </dt>

                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GroupId)
                    </dd>
                </dl>
            </select>
        </div>

        <input type="submit" value="Create" />
    </fieldset>
</form>
