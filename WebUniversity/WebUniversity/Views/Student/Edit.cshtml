@model StudentViewModel
<link rel="stylesheet" href="~/css/entity-form.css" />

<h1>Edit Student</h1>
<form asp-controller="Student" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Student Information</legend>

        <div class="form-group">
            <label asp-for="Id"></label>
            <strong>@Model.Id</strong>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GroupId"></label>
            <select asp-for="GroupId" asp-items="Model.existingGroups" class="form-control"></select>
        </div>

        <input type="submit" name="buttonSubmit" value="Save changes" />
    </fieldset>
</form>
