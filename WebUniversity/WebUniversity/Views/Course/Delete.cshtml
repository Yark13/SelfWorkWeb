@model CourseViewModel
@{
    ViewData["Title"] = "Delete Course";
}

<link rel="stylesheet" href="~/css/delete-confirmation.css" />

<div class="delete-container">
    <h1>Confirm Deletion</h1>

    @if (ViewData["messageIsGroups"] != null)
    {
        <div class="warning-message">
            <strong>@ViewData["messageIsGroups"]</strong>
        </div>
    }

    <form asp-controller="Course" asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Course Information</legend>

            <div class="field">
                <label asp-for="Id"></label>
                <span class="value">@Model.Id</span>
                <input asp-for="Id" type="hidden" />
            </div>

            <div class="field">
                <label asp-for="Name"></label>
                <span class="value">@Model.Name</span>
                <input asp-for="Name" type="hidden" />
            </div>

            <div class="field">
                <label asp-for="Description"></label>
                <span class="value">@Model.Description</span>
                <input asp-for="Description" type="hidden" />
            </div>

            <input asp-for="HasGroups" type="hidden" />

            <button type="submit" class="btn-confirm">Confirm</button>
        </fieldset>
    </form>
</div>
