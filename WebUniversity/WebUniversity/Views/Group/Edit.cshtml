@model GroupViewModel
<link rel="stylesheet" href="~/css/entity-form.css" />

<h1>Edit Group</h1>
<form asp-controller="Group" asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <fieldset>
        <legend>Group Information</legend>

        <div class="form-group">
            <label asp-for="Id"></label>
            <strong>@Model.Id</strong>
        </div>

        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CourseID"></label>
            <select asp-for="CourseID" asp-items="Model.existingCourses" class="form-control"></select>
        </div>

        <input type="submit" name="buttonSubmit" value="Save changes" />
    </fieldset>
</form>
