@model GroupViewModel
@{
    ViewData["Title"] = "Delete Group";
}

<link rel="stylesheet" href="~/css/delete-confirmation.css" />

<div class="delete-container">
    <h1>Confirm Deletion</h1>

    @if (ViewData["messageIsStudents"] != null)
    {
        <div class="warning-message">
            <strong>@ViewData["messageIsStudents"]</strong>
        </div>
    }

    <form asp-controller="Group" asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <fieldset>
            <legend>Group Information</legend>

            <div class="field">
                <label asp-for="Id"></label>
                <span class="value">@Model.Id</span>
                <input asp-for="Id" type="hidden" />
            </div>

            <div class="field">
                <label asp-for="Name"></label>
                <span class="value">@Model.Name</span>
                <input asp-for="Name" type="hidden" />
            </div>

            <div class="field">
                <label asp-for="CourseID"></label>
                <span class="value">@Model.CourseID</span>
                <input asp-for="CourseID" type="hidden" />
            </div>

            <input asp-for="HasStudents" type="hidden" />

            <button type="submit" class="btn-confirm">Confirm</button>
        </fieldset>
    </form>
</div>
